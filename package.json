{
  "name": "mc-skin-viewer",
  "description": "This package provides a simple 3D renderer React component for minecraft skins build on top of three and @react-three/fibre",
  "private": false,
  "author": "ytiK0",
  "license": "MIT",
  "keywords": [
    "minecraft",
    "skin",
    "three",
    "react",
    "3D"
  ],
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.index.d.ts"
    },
    "./skin-parts": {
      "import": "./dist/skin-parts.js",
      "types": "./dist/skin-parts.index.d.ts"
    },
    "./ears": {
      "import": "./dist/ears.js",
      "types": "./dist/ears.index.d.ts"
    }
  },
  "version": "0.0.6",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -d && vite build && tsc -p tsconfig.app.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "publish": "npm run build && npm publish "
  },
  "peerDependencies": {
    "@react-three/drei": ">=10.0.8 <11.0.0",
    "@react-three/fiber": ">=9.1.2 <10.0.0",
    "clsx": ">=2.1.1 <3.0.0",
    "react": ">=18.0.0 <20.0.0",
    "react-dom": ">=18.0.0 <20.0.0",
    "three": ">=0.150.0 <0.177.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.176.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rollup-plugin-visualizer": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
